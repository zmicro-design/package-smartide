#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro smartide <args ...>"
  echo ""

  smartide --help
}

version() {
  smartide --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    smartide "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
